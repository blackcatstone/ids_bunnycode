# DDoS ICMP
alert icmp any any -> any any (msg:"DDoS ICMP Detected"; itype:8; ttl:64; threshold:type both, track by_dst, count 100, seconds 1; classtype:ddos-icmp; sid:2001; rev:1;)
# DoS ICMP
alert icmp any any -> any any (msg:"ICMP Dst Unreachable Detected - UDP Flooding Suspected"; itype:3; icode:3; threshold:type both, track by_dst, count 100, seconds 10; classtype:dos-icmp-udp; sid:2010; rev:1;)
# DDoS SYN
alert tcp any any -> any any (msg:"SYN Flooding Detected - DDoS"; flags:S; dsize:0; window:512; threshold:type both, track by_src, count 100, seconds 1; classtype:ddos-syn; sid:2002; rev:1;)
